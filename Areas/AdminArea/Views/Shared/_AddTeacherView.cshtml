@using School_Management_System.Areas.AdminArea.HelperClass
@model School_Management_System.Areas.AdminArea.ViewModels.TeacherVM

@Html.AntiForgeryToken()
                    <div class="form-body">

                        <div class="form-group row">
                            @Html.LabelFor(model => model.TeacherName, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.TeacherName, htmlAttributes: new { @class = "form-control", placeholder = "Full Name" })
                                @Html.ValidationMessageFor(model => model.TeacherName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.BirthDate, htmlAttributes: new { @class = "form-control", type="date", placeholder = "mm/dd/yyyy" })
                                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Designation, htmlAttributes: new { @class = "form-control", placeholder = "Designation" })
                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownList("Gender", new SelectList(Enum.GetValues(typeof(UserGender))), "Select Gender", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.PasswordFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label text-right col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Address, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="offset-sm-3 col-md-9">
                                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

